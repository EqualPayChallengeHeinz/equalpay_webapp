
<div id="verticalnavbar" class="span-3">
<ul>
	<li><a id="occup_link" href="#">Occupation</a> </li>
	<li><a id="loc_link" href="#">Location</a> </li>
	<li><a id="gend_link" href="#">Gender</a> </li>
	<li><a id="paychk_link" href="#">Paycheck</a> </li>
</ul>
	
</div>

<div id="userform" class="span-10">
	<div id="occupation">

		
		


<%= form_tag("/showmemoney", :method => "get") do %>
  		<%= label_tag(:q, "Start typing your job title") %> <br/>
  		<%= text_field :salarycomjob, :jobtitle, :size => 50,  :class => 'searchbox'  %>
  		<%= hidden_field_tag :jobcode %>
          		
	

	
		
		<a id="nextlink1" href="#" class="button orange">Next</a>
		
	</div>
	
	
	<div id="location">
		<label for="zipcode">Start typing city or zipcode</label> <br/>
		<input type="text" name="" value="" id="zipcodefield" size="50"class="searchbox">
		
		<a id="nextlink2" href="#" class="button orange">Next</a>
	</div>
	
	
	<div id="gender">
		<h5>Select gender</h5>

		
		<input type="radio" name="gender_radio" value="Male"> Male<br/>
		<input type="radio" name="gender_radio" value="Female">Female
		<a id="nextlink3" href="#" class="button orange">Next</a>

	</div>
	
	<div id="paycheck">
		<h5>Select Paycheck type</h5>
		<input type="radio" name="paychk_radio" value="52.177"> Yearly Salary<br/>
		<input type="radio" name="paychk_radio" value="4.348"> Monthly Salary <br/>
		<input type="radio" name="paychk_radio" value="0.025"> Hourly Wages <br/>
	    <%= submit_tag("Show me the money", :id => "showmemoney", :class => "button orange") %>
		<% end %>

	</div>
	
	<%= content_tag "div", id:"mydatadiv", data: {chartdata: @highchartdata, wagegaptrend: @wagegaptrend }   do %>
	<% end %>


	

	
</div>



<div id="chartscontainer" class="span-16 last">
		
	</div>
	
	<div id="chartscontainer2" class="span-16 last">
		
	</div>
<div class="span-24 last">
<%= debug params %>
<%= debug @highchartdata %>
</div>



